# HTML Hosting Service Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration
DB_PATH=../database/hosting.db

# Upload Configuration
MAX_FILE_SIZE=10485760
DEFAULT_EXPIRY_DAYS=30

# Rate Limiting
UPLOAD_RATE_LIMIT=10
UPLOAD_RATE_WINDOW=900000

# Security
ALLOWED_ORIGINS=https://html.zyroi.com
COOKIE_SECRET=your-secure-random-secret-here

# API v2 Authentication (for AI agents)
# Comma-separated list of valid API keys
API_KEYS=your-api-key-here
# Rate limit for authenticated API requests
API_RATE_LIMIT=100
# Rate limit window in milliseconds (default: 15 minutes)
API_RATE_WINDOW=900000

# Cleanup Schedule (in minutes)
CLEANUP_INTERVAL=1440